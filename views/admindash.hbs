         <script>
            var options = {
               series: [{
                  name: 'Revenue',
                  data: [{{ monthlyData }}]
            }],
               chart: {
                  type: 'bar',
                  height: 350
               },
               plotOptions: {
                  bar: {
                     horizontal: false,
                     columnWidth: '55%',
                     endingShape: 'rounded'
                  },
               },
               dataLabels: {
                  enabled: false
               },
               stroke: {
                  show: true,
                  width: 1,
                  colors: ['transparent']
               },
               xaxis: {
                  categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
               },
               yaxis: {
                  title: {
                     text: '₹ (thousands)'
                  }
               },
               fill: {
                  opacity: 1
               },
               tooltip: {
                  y: {
                     formatter: function (val) {
                        return "₹ " + val
                  }
               }
            }
         };

            var chart = new ApexCharts(document.querySelector("#chart"), options);
            chart.render();
