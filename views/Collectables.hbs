    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/user/css/styles.css" rel="stylesheet" />
</head>

<body style="background-color: #000000;">
    <!-- Navigation-->
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: #0000004a;">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand text-warning fw-bold fs-2" href="/">Comic World</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation"><span
                        class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <li class="nav-item"><a class="nav-link " aria-current="page" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link " href="/Comic">Comics</a></li>
                        <li class="nav-item"><a class="nav-link active" href="/collectables">Collectables</a></li>
                        {{!-- <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">Shop</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#!">All Products</a></li>
                                <li>
                                    <hr class="dropdown-divider" />
                                </li>
                                <li><a class="dropdown-item" href="#!">Popular Items</a></li>
                                <li><a class="dropdown-item" href="#!">New Arrivals</a></li>
                            </ul>
                        </li> --}}
                    </ul>
                    <form class="d-flex">
                        <a href="/Cart" class="btn text-light btn-sm me-3" type="submit">
                            <i class="bi-cart-fill me-2"></i><span>Cart</span>
      
                        </a>
                        <a href="/Wishlist" class="btn text-light btn-sm  me-3" type="submit">
                            <i class="bi bi-bag-heart-fill me-2"></i><span>Wishlist</span>
                            {{!-- <span class="badge bg-dark text-white ms-1 rounded-pill">0</span> --}}
                        </a>
                        {{#if Log}}
                        {{!-- <a href="/Profile" class="btn btn-sm text-light" type="submit">
                            <i class="bi bi-person-circle me-2"></i>{{Log.name}}</i>

                        </a> --}}
                        <div class="dropdown">
                            <button class="btn text-light dropdown-toggle" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-2"></i> {{Log.name}}
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/UserProfile">Profile</a></li>
                                <li><a class="dropdown-item" href="/UserLogout">Logout</a></li>
                            </ul>
                        </div>
                        {{else}}
                        <a href="/Login" class="btn btn-sm btn-outline-warning" type="submit">
                            <i class="bi bi-door-open"></i></i>
                            Login
                        </a>{{/if}}
                    </form>
                </div>
            </div>
        </nav>
    </div>
    <!-- Header-->

    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">

            <div class="d-flex flex-row">
                <div class="dropdown mb-3">
                    <button class="btn text-light dropdown-toggle" type="menu" data-bs-toggle="dropdown"
                        aria-expanded="false">Sort
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Collectable?sort=A-Z">A-Z</a></li>
                        <li><a class="dropdown-item" href="/Collectable?sort=Low">Price: Low to High</a></li>
                        <li><a class="dropdown-item" href="/Collectable?sort=High">Price: High to Low</a></li>
                    </ul>
                </div>
                <div class="dropdown ms-4 mb-3">
                    <button class="btn text-light dropdown-toggle" type="menu" data-bs-toggle="dropdown"
                        aria-expanded="false">Filter
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Filter?Category=Statues">Statues</a></li>
                        <li><a class="dropdown-item" href="/Filter?Category=T-shirts">T-shirts</a></li>
                    </ul>
                </div>
            </div>
            <div class="d-flex justify-content-end mb-3">
                <h5 class="text-white ">{{message}} <span class="fst-italic">{{key}}</span> </h5>
            </div>
            <div class=" d-flex justify-content-end me-3 mb-3 h-100">
                <form class="d-flex" role="search" method="post" action="/Search?key=Collectable">
                    <div class="searchbar">
                        <input class="search_input" type="search" placeholder="Search" name="key">
                        <button class="search_icon btn-outline-secondary" type="submit"><i
                                class="fas fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {{#each Collectables}}
                {{#if this.Status}}
                {{!-- {{#if this.category ='comic'}} --}}
                <div class="col mb-5 ">
                    <div class="card text-light rounded-5" style="background-color: rgba(0, 0, 0, 0.734); ">
                        <!-- Sale badge-->
                        <div class="badge  me-2 text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                            Sale
                        </div>
                        <!-- Product image-->
                        <img class="rounded-5 card-img-top img-fluid " style="height:295px ;"
                            src="{{this.image.[0].url}}" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-3">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">{{this.name}}</h5>
                                <!-- Product reviews-->
                                {{!-- <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div> --}}
                                <!-- Product price-->
                                <span class="text-muted text-decoration-line-through">$20.00</span>
                                <i class="bi bi-currency-rupee"></i>{{this.price}}

                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn text-light mt-auto"
                                    href="/Product/{{this._id}}">View</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- {{/if}} --}}
                {{/if}}
                {{/each}}

            </div>
        </div>
    </section>
    <!-- Footer-->
    <footer class="py-5">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2022</p>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <!-- Core theme JS-->
</body>

</html>