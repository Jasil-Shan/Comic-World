    <div class=" d-flex justify-content-end pe-5 pt-5 h-100">
        <form class="d-flex" role="search" method="post" action="/Search">
            <div class="searchbar">
                <input class="search_input" type="search" placeholder="Search" name="key">
                <button class="search_icon btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
            </div>
        </form>

    </div>
    <!-- Section-->
    <section>
        <div class="container mt-5">
            <div class="d-flex flex-row">
                <div class="dropdown mb-3">
                    <button class="btn btn-outline-light dropdown-toggle" type="menu" data-bs-toggle="dropdown"
                        aria-expanded="false">Sort
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Comics?sort=A-Z">A-Z</a></li>
                        <li><a class="dropdown-item" href="/Comics?sort=Low">Price: Low to High</a></li>
                        <li><a class="dropdown-item" href="/Comics?sort=High">Price: High to Low</a></li>
                    </ul>
                </div>
                <div class="dropdown ms-4 mb-3">
                    <button class="btn btn-outline-light dropdown-toggle" type="menu" data-bs-toggle="dropdown"
                        aria-expanded="false">Filter
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Filter?Category=Marvel">Marvel</a></li>
                        <li><a class="dropdown-item" href="/Filter?Category=DC">DC</a></li>
                        <li><a class="dropdown-item" href="/Filter?Category=Anime">Anime</a></li>
                    </ul>
                </div>
            </div>
            <div class="d-flex justify-content-end mb-3">
                <h5 class="text-white ">{{message}}  <span class="fst-italic">{{key}}</span> </h5>
            </div>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {{#each Comics}}
                {{#if this.Status}}
                <div class="col mb-5 ">
                    <div class="card text-white rounded-5 " style="background-color: rgba(0, 0, 0, 0.734);">
                        <!-- Sale badge-->
                        <div class="badge bg-dark text-white me-2 position-absolute" style="top: 0.5rem; right: 0.5rem">
                            Sale
                        </div>
                        <div>
                            <!-- Product image-->
                            <img class="rounded-5 card-img-top img-fluid" style="height:295px ;"
                                src="{{this.image.[0].url}}" alt="..." />
                        </div>
                        <!-- Product details-->
                        <div class="card-body p-3">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">{{this.name}}</h5>
                                <span class="text-muted text-decoration-line-through"> <i
                                        class="bi bi-currency-rupee"></i>{{this.mrp}}</span>
                                <i class="bi bi-currency-rupee"></i>{{this.price}}

                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-light mt-auto"
                                    href="/Product/{{this._id}}">View</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- {{/if}} --}}
                {{/if}}
                {{/each}}

            </div>
        </div>
    </section>
    <!-- Footer-->
    <footer class="py-5">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2022</p>
        </div>
