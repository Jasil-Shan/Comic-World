                </form>
            </div>
        </div>
    </nav>
    <section style="height:100%;" class=" gradient-custom">
        <div class="container py-5">
            <div class="row d-flex justify-content-center my-4">
                <div class="col-md-8">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Cart</h5>
                        </div>
                        {{#each products}}
                        <div class="card-body">
                            <!-- Single item -->
                            {{!-- {{#each Cart}} --}}
                            <div class="row">
                                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                    <!-- Image -->
                                    <div class="bg-image hover-overlay hover-zoom ripple rounded"
                                        data-mdb-ripple-color="light">
                                        <img src="{{this.image.[0].url}}" class="w-100" alt="{{this.name}}" />
                                        <a href="#!">
                                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                        </a>
                                    </div>
                                    <!-- Image -->
                                </div>

                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                    <!-- Data -->
                                    {{!-- <p><strong>{{this.0}}</strong></p> --}}
                                    <h3>{{this.name}}</h3>
                                    <p>{{this.category}} > {{this.subCategory}}</p>
                                    {{!-- <a class="btn btn-primary btn-sm me-1 mb-2" href="/DeleteCart/{{this._id}}"
                                        data-mdb-toggle="tooltip" title="Remove item">
                                        <i class="fas fa-trash"></i> --}}
                                        <a class="btn btn-danger btn-sm me-1 mb-2" data-bs-toggle="modal"
                                            data-bs-target="#{{this._id}}" data-mdb-toggle="tooltip"
                                            title="Remove item">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <!-- The Modal -->
                                        <div class="modal" id="{{this._id}}">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">

                                                    <!-- Modal Header -->
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">Are you sure !</h4>
                                                        <button type="button" class="btn-close"
                                                            data-bs-dismiss="modal"></button>
                                                    </div>

                                                    <!-- Modal body -->
                                                    <div class="modal-body">
                                                        Do you really want to Remove this Product ?
                                                    </div>

                                                    <!-- Modal footer -->
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-sm btn-danger"
                                                            data-bs-dismiss="modal">No</button>
                                                        <button
                                                            onclick="{window.location.href='/DeleteCart/{{this._id}}'}"
                                                            class="btn btn-sm btn-danger">Yes</button>

                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <!-- Data -->
                                </div>

                                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                    <!-- Quantity -->
                                    <div class="d-flex mb-4" style="max-width: 300px">
                                        <button onclick="Quantity('{{this._id}}','minus')"
                                            class="btn btn-warning px-3 me-2" style="height: fit-content;" />
                                        <i class="fas fa-minus"></i>
                                        </button>
                                        <div class="form-outline">
                                            <input id="quantityBox{{this._id}}" min="1" max="10" name="quantity"
                                                value="{{this.quantity}}" type="number" class="form-control" readonly />
                                            <label class="form-label" for="form1">Quantity</label>
                                        </div>
                                        <button onclick="Quantity('{{this._id}}','plus')"
                                            class="btn btn-warning px-3 me-2" style="height: fit-content;" />
                                        <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                    <!-- Quantity -->

                                    <!-- Price -->
                                    <p class="text-start text-md-center">
                                        <strong><i class="bi bi-currency-rupee"></i>{{this.price}}</strong>
                                    </p>
                                    <!-- Price -->
                                </div>
                            </div>
                            <!-- Single item -->
                            <hr class="my-4" />
                        </div>
                        {{/each}}

                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <p><strong>Expected shipping delivery</strong></p>
                            <p class="mb-0">3 - 5 days</p>
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body">
                            <p><strong>We accept</strong></p>
                            <img class="me-2" width="45px"
                                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                                alt="Visa" />
                            <img class="me-2" width="45px"
                                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                                alt="American Express" />
                            <img class="me-2" width="45px"
                                src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                                alt="Mastercard" />

                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Summary</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li
                                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    Amount
                                    <span><i class="bi bi-currency-rupee"></i>{{MRP}}</span>
                                </li>
                                {{!-- <li
                                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    Our Price
                                    <span><i class="bi bi-currency-rupee"></i>{{TotalAmount}}</span>
                                </li> --}}
                                <li
                                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                    Discount
                                    <span class="text-success">-<i class="bi bi-currency-rupee">{{Discount}}</i></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Shipping Charge
                                    <span>Free Delivery</span>
                                </li>
                                <li
                                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Total amount</strong>
                                        <strong>
                                            <p class="mb-0">(including VAT)</p>
                                        </strong>
                                    </div>
                                    <span><strong><i class="bi bi-currency-rupee"></i>{{TotalAmount}}</strong></span>
                                </li>
                            </ul>

                            <a href="/Checkout" class="btn btn-warning btn-lg btn-block">
                                Go to checkout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>

    <script>
        function Quantity(id, query) {
            axios.get(`/QuantityUpdate/${id}?Add=${query}`).then((result) => {
                console.log(result)
                let quantityBox = document.getElementById('quantityBox' + id)
                if (result.data.plus) {
                    quantityBox.value = Number(quantityBox.value) + 1
                }
                else {
                    quantityBox.value = Number(quantityBox.value) - 1
                }
            })
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>