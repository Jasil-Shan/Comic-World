<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_img"> <img src="https://i.imgur.com/hczKIze.jpg" alt=""> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
      <nav class="nav">
         <div> <a href="#" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span
                  class="nav_logo-name">Admin</span> </a>
            <div class="nav_list"> <a href="/admin/dash" title="Dashboard" class="nav_link "> <i
                     class='bx bx-grid-alt nav_icon'></i>
                  <span class="nav_name">Dashboard</span> </a> <a title="Users" href="/admin/user" class="nav_link"> <i
                     class='bx bx-user nav_icon'></i> <span class="nav_name">Users</span> </a>
               <a title="Products" href="/admin/products" class="nav_link ">  <i class='bx bx-folder nav_icon'></i><span class="nav_name">Products</span> </a>
               <a title="Category" href="/admin/category" class="nav_link"> <i class='bx bx-bookmark nav_icon'></i>
                  <span class="nav_name">Category</span> </a>
               <a title="Banner" href="/admin/banner" class="nav_link"><i class='bx bxs-image nav_icon'></i> <span
                     class="nav_name">Banner</span> </a>
               <a title="Coupon" href="/admin/coupon" class="nav_link"> <i class='bx bxs-discount nav_icon'></i>
                  <span class="nav_name">
                     Coupon</span> </a>
               <a title="Orders" href="/admin/order" class="nav_link active"> <i class='bx bxs-pie-chart-alt-2 nav_icon' ></i>
                  <span class="nav_name">Orders</span> </a>
               <a title="Sales Report" href="/admin/salesReport" class="nav_link"> <i
                     class='bx bx-bar-chart-alt-2 nav_icon'></i> <span class="nav_name">Sales
                     Report</span> </a>
            </div>
         </div> <a href="/admin/Adminlogout" class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span
               class="nav_name">SignOut</span> </a>
      </nav>
   </div>
    <main id="main" class="main">
        <div class="mt-5">
            <div class="card mt-3" style="width: fit-content;">
                <div class="card-body pt-2">

                    <table class="table table-hover table-borderless mt-2 ">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">User</th>
                                <th scope="col">Product</th>
                                <th scope="col">Order Date</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each Orders}}
                            <tr>
                                <th scope="row">{{inc @index}}</th>
                                <td>{{this.address.name}}</td>
                                <td>{{this.product.name}}</td>
                                <td>{{this.orderDate}}</td>
                                <td>{{this.total}}</td>
                                <td>{{this.quantity}}</td>
                                <td>

                                    {{#if_eq this.orderStatus "Delivered" }}
                                    <span class="badge text-bg-success">{{this.orderStatus}}</span>
                                    {{else}}
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-outline-warning dropdown-toggle"
                                            data-bs-toggle="dropdown" aria-expanded="false">{{this.orderStatus}}
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><button onclick="status('{{this._id}}','Pending')"
                                                    class="dropdown-item">Pending</button>
                                            </li>
                                            <li><button onclick="status('{{this._id}}','Shipped')"
                                                    class="dropdown-item">Shipped</button>
                                            </li>
                                            <li><button onclick="status('{{this._id}}','Out for Delivery')"
                                                    class="dropdown-item">Out for Delivery</button></li>
                                            <li><button onclick="status('{{this._id}}','Delivered')"
                                                    class="dropdown-item">Delivered</button>
                                            </li>

                                        </ul>
                                    </div>
                                    {{/if_eq}}
                                </td>

                                <td>
                                    {{#if_eq this.orderStatus "Delivered"}}
                                    <span class="text-success"><i class="bi bi-check-lg"></i></span>
                                    {{else}}
                                    <a class="btn btn-danger btn-sm" data-bs-toggle="modal"
                                        data-bs-target="#{{this._id}}">
                                        Cancel
                                    </a>
                                    <!-- The Modal -->
                                    <div class="modal" id="{{this._id}}">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">

                                                <!-- Modal Header -->
                                                <div class="modal-header">
                                                    <h4 class="modal-title">Are you sure !</h4>
                                                    <button type="button" class="btn-close"
                                                        data-bs-dismiss="modal"></button>
                                                </div>

                                                <!-- Modal body -->
                                                <div class="modal-body">
                                                    Do you really want to cancel this order ?
                                                </div>

                                                <!-- Modal footer -->
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-sm btn-danger"
                                                        data-bs-dismiss="modal">No</button>
                                                    <button
                                                        onclick="{window.location.href='/admin/order?status=Cancelled&id={{this._id}}'}"
                                                        class="btn btn-sm btn-danger">Yes</button>

                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    {{/if_eq}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>



    </main>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script>
        function status(id, stat) {
            axios.get(`/admin/order?status=${stat}&id=${id}`).then(() => {
                console.log(id)
                window.location.reload()
            })
        }

    </script>
