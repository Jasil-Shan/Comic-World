<body id="body-pd">
   <header class="header" id="header">
      <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
      <div class="header_img"> <img src="https://i.imgur.com/hczKIze.jpg" alt=""> </div>
   </header>
    <div class="l-navbar" id="nav-bar">
      <nav class="nav">
         <div> <a href="#" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span
                  class="nav_logo-name">Admin</span> </a>
            <div class="nav_list"> <a href="/admin/dash" title="Dashboard" class="nav_link "> <i
                     class='bx bx-grid-alt nav_icon'></i>
                  <span class="nav_name">Dashboard</span> </a> <a title="Users" href="/admin/user" class="nav_link"> <i
                     class='bx bx-user nav_icon'></i> <span class="nav_name">Users</span> </a>
               <a title="Products" href="/admin/products" class="nav_link">  <i class='bx bx-folder nav_icon'></i><span class="nav_name">Products</span> </a>
               <a title="Category" href="/admin/category" class="nav_link"> <i class='bx bx-bookmark nav_icon'></i>
                  <span class="nav_name">Category</span> </a>
               <a title="Banner" href="/admin/banner" class="nav_link"><i class='bx bxs-image nav_icon'></i> <span
                     class="nav_name">Banner</span> </a>
               <a title="Coupon" href="/admin/coupon" class="nav_link active"> <i class='bx bxs-discount nav_icon'></i>
                  <span class="nav_name">
                     Coupon</span> </a>
               <a title="Orders" href="/admin/order" class="nav_link"> <i class='bx bxs-pie-chart-alt-2 nav_icon' ></i>
                  <span class="nav_name">Orders</span> </a>
               <a title="Sales Report" href="/admin/salesReport" class="nav_link"> <i
                     class='bx bx-bar-chart-alt-2 nav_icon'></i> <span class="nav_name">Sales
                     Report</span> </a>
            </div>
         </div> <a href="/admin/Adminlogout" class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span
               class="nav_name">SignOut</span> </a>
      </nav>
   </div>
    <main id="main" class="main">
        <div class="mt-5">
            <a href="/admin/AddCoupon" class="btn btn-warning text-light">Add Coupon <i
                    class=" ms-1 bi bi-person-fill-add"></i> </a>
            <div class="card mt-3">
                <div class="card-body pt-2">

                    <table class="table table-hover table-borderless mt-2 ">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Code</th>
                                <th scope="col">Cashback</th>
                                <th scope="col">Min-Amount</th>
                                <th scope="col">Expiry</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each Coupons}}
                            <tr>
                                <th scope="row">{{inc @index}}</th>
                                <td>{{this.name}}</td>
                                <td>{{this.code}}</td>
                                <td>{{this.cashback}}</td>
                                <td>{{this.minAmount}}</td>
                                <td>{{this.expiry}}</td>
                                <td>{{this.status }}
                                </td>

                                <td>
                                    <a class="btn btn-danger btn-sm" data-bs-toggle="modal"
                                        data-bs-target="#{{this._id}}">
                                        Delete
                                    </a>
                                    <!-- The Modal -->
                                    <div class="modal" id="{{this._id}}">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">

                                                <!-- Modal Header -->
                                                <div class="modal-header">
                                                    <h4 class="modal-title">Are you sure !</h4>
                                                    <button type="button" class="btn-close"
                                                        data-bs-dismiss="modal"></button>
                                                </div>

                                                <!-- Modal body -->
                                                <div class="modal-body">
                                                    Do you really want to UnList this Product ?
                                                </div>

                                                <!-- Modal footer -->
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-sm btn-danger"
                                                        data-bs-dismiss="modal">No</button>
                                                    <button
                                                        onclick="{window.location.href='/admin/DeleteCoupon/{{this._id}}'}"
                                                        class="btn btn-sm btn-danger">Yes</button>

                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>



    </main>
