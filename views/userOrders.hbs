    <!-- Section-->
    <section>
        <div class="container mt-5">
            <h2>Order History</h2>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {{#each Orders}}
                {{!-- {{#if this.Status}} --}}
                <div class="col mb-5 ">
                    <div class="card text-white rounded-5 " style="width: fit-content; background-color: rgb(0, 0, 0);">
                        {{#if_eq this.orderStatus "Pending"}}
                        <div class="badge bg-warning text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                            {{this.orderStatus}}
                        </div>
                        {{/if_eq}}
                        {{#if_eq this.orderStatus "Cancelled"}}
                        <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                            {{this.orderStatus}}
                        </div>
                        {{/if_eq}}
                        {{#if_eq this.orderStatus "Delivered"}}
                        <div class="badge bg-success text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                            {{this.orderStatus}}
                        </div>
                        {{/if_eq}}
                        {{#if_eq this.orderStatus "Shipped"}}
                        <div class="badge bg-info text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                            {{this.orderStatus}}
                        </div>
                        {{/if_eq}}
                        {{#if_eq this.orderStatus "Out for Delivery"}}
                        <div class="badge bg-success text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                            {{this.orderStatus}}
                        </div>
                        {{/if_eq}}
                        <div>
                            <!-- Product image-->
                            <img class="rounded-5 card-img-top img-fluid" style="height:295px ;"
                                src="{{this.product.image.[0].url}}" alt="..." />
                        </div>
                        <!-- Product details-->
                        <div class="card-body p-3">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">{{this.product.name}}</h5>
                                Total:<i class="bi bi-currency-rupee"></i>{{this.total}}
                                <span class="ms-2 text-muted"> Quantity:{{this.quantity}}</span>
                            </div>
                        </div>
                        <!-- Product actions-->
                        {{#if_eq this.orderStatus "Cancelled"}}
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a type="button" class="btn text-danger mt-auto">Cancelled</a>
                            </div>
                        </div>
                        {{else}}
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a type="button" data-bs-toggle="modal"
                                    data-bs-target="#{{this._id}}" class="btn text-light mt-auto">Track</a>
                            </div>
                        </div>
                        {{/if_eq}}
                        <div class="modal fade" id="{{this._id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content text-white"
                                    style="background-color: #18171b; border-radius: 10px;">
                                    <div class="modal-header border-bottom-0">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body text-start px-4 pt-0 pb-4">
                                        <div class="text-center">
                                            <h5 class="mb-3">Order Status</h5>
                                            <h5 class="mb-5">Order ID- {{this.orderId}}</h5>
                                        </div>
                                        {{#if_eq this.orderStatus "Pending"}}
                                        <div class="progress bg-dark" role="progressbar" aria-label="Success example"
                                            aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                            <div class="progress-bar bg-success" style="width: 25%"></div>
                                        </div>
                                        {{/if_eq}}
                                        {{#if_eq this.orderStatus "Shipped"}}
                                        <div class="progress bg-dark" role="progressbar" aria-label="Success example"
                                            aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                            <div class="progress-bar bg-success" style="width: 35%"></div>
                                        </div>
                                        {{/if_eq}}
                                        {{#if_eq this.orderStatus "Out for Delivery"}}
                                        <div class="progress bg-dark" role="progressbar" aria-label="Success example"
                                            aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                            <div class="progress-bar bg-success" style="width: 60%"></div>
                                        </div>
                                        {{/if_eq}}
                                        {{#if_eq this.orderStatus "Delivered"}}
                                        <div class="progress bg-dark" role="progressbar" aria-label="Success example"
                                            aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                            <div class="progress-bar bg-success" style="width: 100%"></div>
                                        </div>
                                        {{/if_eq}}
                                        <div class="d-flex justify-content-between mb-5">
                                            <div class="text-center">

                                                <p> Order Placed</p>
                                            </div>

                                            <div class="text-center">

                                                <p>In Transit</p>
                                            </div>
                                            <div class="text-center">
                                                <p> Out for Delivery</p>
                                            </div>
                                            <div class="text-center">

                                                <p>Delivered</p>
                                            </div>
                                        </div>

                                        <div class="row justify-content-center">
                                            <div class="col-md-4 text-center">
                                                <p class="lead fw-normal">Shipped with</p>
                                            </div>
                                            <div class="col-md-4 text-center">
                                                <p class="lead fw-normal">UPS Expedited</p>
                                            </div>
                                            <div class="col-md-2 text-center">
                                                <i class="fas fa-phone fa-lg"></i>
                                            </div>
                                        </div>

                                        <div class="row justify-content-center">
                                            <div class="col-md-4 text-center">
                                                <p class="lead fw-normal">Estimated Delivery</p>
                                            </div>
                                            <div class="col-md-4 text-center">
                                                <p class="lead fw-normal">02/12/2023</p>
                                            </div>
                                            <div class="col-md-2 text-center">
                                                <i class="fas fa-envelope fa-lg"></i>
                                            </div>
                                            <div class="text-center"><a
                                                    href="/cancelOrder/{{this._id}}?status=Cancelled"
                                                    class="mt-2 btn btn-outline-danger btn-sm">Cancel Order</a></div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </section>

