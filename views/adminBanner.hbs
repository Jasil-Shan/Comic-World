</head>

<body>
   <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="d-flex align-items-center justify-content-between"> <a class="logo d-flex align-items-center"> <span
               class="d-none d-lg-block">Admin</span> </a></i></div>
      <div><a class="btn btn-sm btn-danger" href="/admin/Adminlogout">Logout</a></div>
      <nav class="header-nav ms-auto">
         <ul class="d-flex align-items-center">
         </ul>
      </nav>
   </header>
   <aside id="sidebar" class="sidebar">
      <ul class="sidebar-nav" id="sidebar-nav">
         <li class="nav-item"> <a class="nav-link collapsed" href="/admin/dash"> <span>Dashboard</span> </a></li>
         <li class="nav-item">
            <a class="nav-link collapsed" data-bs-target="#components-nav" href="/admin/user"><span>Users</span> </a>
         </li>
         <li class="nav-item">
            <a class="nav-link collapsed" data-bs-target="#components-nav" href="/admin/products"> <span>Products</span>
            </a>
         </li>
         <li class="nav-item">
            <a class="nav-link collapsed" href="/admin/category">
               <span>Category</span> </a>
         </li>
         <li class="nav-item">
            <a class="nav-link " href="/admin/banner"><span>Banner</span>
            </a>
         </li>
         <li class="nav-item">
            <a class="nav-link collapsed" href="/admin/coupon"><span>Coupon</span>
            </a>
         </li>
         </li>
         <li class="nav-item">
            <a class="nav-link collapsed" data-bs-target="#components-nav" data-bs-toggle="collapse"
               href="/admin/order"><span>Orders</span>
            </a>
         </li>
   </aside>
   <main id="main" class="main">

      <div class="mt-5">
         <a href="/admin/addBanner" class="btn btn-warning text-light">New Banner <i
               class=" ms-1 bi bi-person-fill-add"></i> </a>
         {{!-- {{#if userUpdated}}
         <div class="alert alert-success alert-dismissible fade show" role="alert">
            <b>User Updated successfully</b>
            <a type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></a>
         </div>
         {{/if}} --}}
         <div class="card shadow p-3 mb-5 rounded mt-3">
            <div class="card-body pt-2">

               <table class="table table-borderless table-white  table-hover mt-2 ">
                  <thead>
                     <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Banner</th>
                        <th scope="col">Name</th>
                        <th scope="col">Caption</th>
                        <th scope="col">Handle</th>

                     </tr>
                  </thead>
                  <tbody>
                     {{#each Banners}}
                     <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td><img width="70px" height="60px" src="/admin/images/{{this.image.[0].filename}}" alt=""></td>
                        <td>{{this.name}}</td>
                        <td>{{this.caption}}</td>
                        <td>

                           {{!-- <a href="/admin/EditCategory/{{this._id}}" class="btn btn-sm btn-success">Edit</a> --}}


                           <a class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#{{this._id}}">
                              Delete
                           </a>
                           <!-- The Modal -->
                           <div class="modal" id="{{this._id}}">
                              <div class="modal-dialog modal-dialog-centered">
                                 <div class="modal-content">

                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                       <h4 class="modal-title">Delete Category !</h4>
                                       <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                       Do you really want to delete this Category ?
                                    </div>

                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                       <button type="button" class="btn btn-sm btn-danger"
                                          data-bs-dismiss="modal">No</button>
                                       <button onclick="{window.location.href='/admin/DeleteBanner/{{this._id}}'}"
                                          class="btn btn-sm btn-danger">Yes</button>

                                    </div>

                                 </div>
                              </div>
                           </div>
            </div>
            </td>
            </tr>
            {{/each}}
            </tbody>
            </table>
         </div>
      </div>
      </div>



   </main>
   <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
         class="bi bi-arrow-up-short"></i></a>
