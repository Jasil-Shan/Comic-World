  <body>
    <section class="vh-100 ms-5">
      <form action="/admin/SaveProduct" method="post" enctype="multipart/form-data">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                  <div class="pb-5">
                    {{#if error}}
                    <span class="alert alert-dismissible alert-danger " role="alert"> {{message}}
                      {{/if}}


                    </span>
                  </div>

                  <h2 class="fw-bold mb-5 text-dark text-uppercase">Add Product</h2>
                  <div class="form-outline form-white mb-5">
                    <input type="text" name="name" placeholder="Product Name" class="form-control form-control-lg" />
                  </div>
                  <div class="mb-4">
                    <textarea class="form-control" placeholder="Description" name="description"
                      id="floatingTextarea"></textarea>
                  </div>

                  <div class="form-outline mb-4">
                    <select class="form-select" name="category" aria-label="Default select example">
                      <option selected>Select a Category</option>

                      {{#each result}}
                      <option>{{this.Category}}</option>
                      {{/each}}
                    </select>

                  </div>
                  <div class="form-outline mb-4">
                    <select class="form-select" name="subCategory" aria-label="Default select example">
                      <option selected>Select a Sub-Category</option>
                      {{#each result}}
                      {{#each Sub}}
                      <option>{{this}}</option>{{/each}}
                      {{/each}}


                    </select>
                  </div>
                  <div class="form-outline form-white mb-4">
                    <input type="number" name="mrp" placeholder="MRP" class="form-control form-control-lg" />
                  </div>
                  <div class="form-outline form-white mb-4">
                    <input type="number" name="price" placeholder="Price" class="form-control form-control-lg" />
                  </div>
                  <div class="form-outline form-white mb-3">
                    <input type="number" name="stock" placeholder="Stock" class="form-control form-control-lg" />
                  </div>
                  <label class="form-check-label font-monospace text-dark me-3">Status :</label>

                  <input type="radio" class="btn-check" value="true" name="Status" id="danger-outlined2"
                    autocomplete="off">
                  <label class="btn btn-sm btn-outline-success me-2" for="danger-outlined2">List now</label>

                  <input type="radio" class="btn-check" value="false" name="Status" id="danger-outlined"
                    autocomplete="off">
                  <label class="btn btn-sm btn-outline-danger" for="danger-outlined">Later</label>



                  <div class="mb-5">
                    <label for="formFile" class="form-label"></label>
                    <input class="form-control" type="file" name="image" id="formFile" multiple>
                  </div>
                  <button class="btn btn-outline-success btn-lg px-5" type="submit">Submit</button>

                </div>

              </div>
            </div>
          </div>
        </div>
      </form>
      </div>
